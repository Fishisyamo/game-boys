<% provide(:title, "#{@item.name}") %>
<div class="row">
  <div class="col-md-3 col-sm-6 col-xs-12 col-md-offset-3">
    <div class="item">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <img src="<%= @item.image_url %>" alt="">
        </div>
        <div class="panel-body">
          <p class="item-title"><%= @item.name %></p>
          <div class="buttons text-center">
            <% if logged_in? %>
              <%= render 'ownerships/favo_button', item: @item %>
              <%= render 'ownerships/play_button', item: @item %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="favo-users">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          Favoしたユーザー
        </div>
        <div class="panel-body">
          <% @favo_users.each do |user| %>
            <%= link_to user.name, user_path(user) %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="play-users">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          Playしているユーザー
        </div>
        <div class="panel-body">
          <% @play_users.each do |user| %>
            <%= link_to user.name, user_path(user) %>
          <% end %>
        </div>
      </div>
    </div>
    <p class="text-center">
      <%= link_to '楽天詳細ページ', @item.url, target: '_blank' %>
    </p>
  </div>
</div>