<% if items %>
  <div class="row">
    <% items.each do |item| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= item.image_url %>" alt="<%= item.name %>">
            </div>
            <div class="panel-body">
              <% if item.persisted? %>
                <p clas="item-title"><%= link_to item.name, item %></p>
              <% else %>
                <p class="item-title"><%= item.name %></p>
              <% end %>
              <div class="buttons text-center">
                <% if logged_in? %>
                  <%= render 'ownerships/favo_button', item: item %>
                  <%= render 'ownerships/play_button', item: item %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>