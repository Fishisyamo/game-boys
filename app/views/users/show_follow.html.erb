<% provide(:title, @title) %>
<div class="user-profile">
  <div class="icon text-center">
    <%= gravatar_for @user %>
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
    <%= render 'follow_form' if logged_in? %>
  </div>
  <div class="status text-center">
    <ul>
      <li>
        <div class="status-label">Favo</div>
        <div id="favo_count" class="status-value">
          <%= @count_favo %>
        </div>
      </li>
      <li>
        <div class="status-label">Play</div>
        <div id="play_count" class="status-value">
          <%= @count_play %>
        </div>
      </li>
      <%= render 'shared/stats' %>
    </ul>
  </div>
</div>
<%= render 'navtabs', user: @user %>
<div class="nav-contents">
  <div class="col-xs-offset-4 col-xs-8">
    <%= render 'users', users: @users %>
  </div>
</div>